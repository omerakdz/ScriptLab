<%- include("partials/header") %>

<main class="edit-skin-main">
  <h1>bewerk: <%= skin.name %></h1>
  
  <article class="edit-fav-img">
    <img src="<%= skin.images.icon %>" alt="Afbeelding van <%= skin.name %>"/>
  </article>

  <form action="/skins/edit/<%= skin.id %>" method="post">
    <label for="wins">Wins:</label>
    <input type="number" id="wins" name="wins" value="<%= skin.wins ?? 0 %>" min="0" required>

    <label for="losses">Losses:</label>
    <input type="number" id="losses" name="losses" value="<%= skin.losses ?? 0 %>" min="0" required>

    <button type="submit">Opslaan</button>
  </form>
</main>

<%- include("partials/footer") %>
