<%- include("partials/header") %>

<main>
  <section class="leaderboard-card">
    <a href="index" class="back-button">&larr; TERUG</a>

    <label for="friends-toggle" class="menu-btn">
      <img src="images/menu-button.svg" width="30px" alt="Menu">
    </label>
    <input type="checkbox" id="friends-toggle" hidden>

    <ul class="friends-header">
      <li><a href="/friends">VRIENDEN</a></li>
      <li class="active"><a href="/leaderboard">LEADERBOARD</a></li>
      <li><a href="/search">ZOEKEN</a></li>
    </ul>
    <section class="leaderboard-container-1">
      <table class="leaderboard-table">
        <thead>
          <tr>
            <th>SPELER</th>
            <th>ZETTEN</th>
          </tr>
        </thead>
        <tbody>
          <% let rank = 1; %>
          <% for(var profile of profiles ) { %>
          <tr>
            <td>
              <span style="width: 40px; display:inline-block;">#<%=rank%></span><a href="/search/<%=profile.username%>"><img src="<%= profile.selectedSkinId == null ? '../images/default-img.png' : 'https://fortnite-api.com/images/cosmetics/br/' + profile.selectedSkinId + '/smallicon.png' %>" alt="" /> <span class="leaderboard-username">
                  <%= profile.username %> </span></a>
            </td>
            <% rank++ %>
            <td><%= profile.moves == null ? "0" : profile.moves %></td>
            <% } %>
          </tr>
        </tbody>
      </table>
    </section>
  </section>
</main>

<%- include("partials/footer") %>