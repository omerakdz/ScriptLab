    <button class="mobile-options-btn" id="optionsBtn"> <img src="images/menu-button.svg" alt=""></button>
    <ul class="settings-left-btns" id="leftBtns">
      <a href="index" class="back-button">&larr; TERUG</a>

      <li><button class="profile-btn active"><a href="/profile-settings">Profiel</a></button></li>
